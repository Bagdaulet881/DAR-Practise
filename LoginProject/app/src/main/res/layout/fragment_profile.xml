<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/btnStart"
        android:layout_width="170.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="START FRAGMENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/NameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="TextView"
            android:textColor="#ffffff"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/UsernameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/bottomItemColor"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/NameValue"
            app:layout_constraintHorizontal_bias="0.046"
            app:layout_constraintStart_toStartOf="@+id/NameValue"
            app:layout_constraintTop_toBottomOf="@+id/NameValue" />

        <ImageView
            android:id="@+id/storyImgCirc"
            android:layout_width="72dp"
            android:layout_height="74dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:src="@drawable/user_circle_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.985"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="serif"
            android:text="B"
            android:textColor="#ffffff"
            android:textSize="54sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/storyImgCirc"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/logout"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:layout_marginStart="52dp"

            android:background="@android:color/transparent"
            android:text="Log Out"
            android:textColor="#4fb99d"
            app:layout_constraintBottom_toBottomOf="@+id/UsernameValue"
            app:layout_constraintStart_toEndOf="@+id/UsernameValue"
            app:layout_constraintTop_toTopOf="@+id/UsernameValue"
            app:layout_constraintVertical_bias="0.444" />


        <ImageView
            android:id="@+id/ivAvatar2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="156dp"
            android:src="@drawable/circle_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/a5"
            app:civ_border_color="@color/red"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivAvatar2"
            app:layout_constraintEnd_toEndOf="@+id/ivAvatar2"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar2"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar2"
            app:layout_constraintVertical_bias="0.384" />
        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="Camera"
            app:layout_constraintEnd_toEndOf="@+id/ivAvatar"
            app:layout_constraintStart_toStartOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar" />

        <Button
            android:id="@+id/buttonGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery"
            app:layout_constraintEnd_toEndOf="@+id/buttonCamera"
            app:layout_constraintStart_toStartOf="@+id/buttonCamera"
            app:layout_constraintTop_toBottomOf="@+id/buttonCamera" />

        <TextView
            android:id="@+id/showText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginTop="62dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/buttonGallery"
            app:layout_constraintStart_toStartOf="@+id/buttonGallery"
            app:layout_constraintTop_toBottomOf="@+id/buttonGallery" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>